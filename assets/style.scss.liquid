$fadeOn: left 0s 0.4s, opacity 0.4s;
$fadeOff: left 0s, opacity 0.4s;
$width: {{ settings.page_width }}px;
$bg: {{ settings.background_color }};
$text: {{ settings.text_color }};
$border: {{ settings.border_color }};
$mediumText: {{ settings.medium_text_color }};
$bp: 960px;


/*
Reset
*/

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: $bg;
  color: $text;
  font-size: 100%;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

img, svg {
  display: block;
  width: 100%
}

a {
  text-decoration: none;
}

li {
  list-style: none;
}

button,
input,
select,
textarea {
  outline: none;
  border: none;
  background: transparent;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  appearance: none;
}

/*
Page
*/

.width{
  max-width: $width;
  width: calc(100% - 40px);
  margin: 0 auto;

  @media (min-width: $bp) {
    width: calc(100% - 80px)
  }
}

.hero {
  background: #ddd;
  color: white;
  padding: 200px 0;
}

/*
  Header
*/

.header {
  background: $bg;
}

.header-flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-logo {
  display: block;
}

.header-hamburger{
  width: 32px;
  display: block;

  @media (min-width: $bp) {
    display: none;
  }
}

.header-hamburger-bar {
  height: 2px;
  width: 100%;
  background: $text;
  display: block;
  border-radius: 2px;

  & + & {
    margin-top: 6px;
  }
}

.header-nav-overlay {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  z-index: 9;
  opacity: 0;
  left: -100%;

  @media(min-width: $bp) {
    display: none;
  }

  .nav-active & {
    left: 0;
    opacity: 1;
    transition: $fadeOn;
  }

  @media(min-width: $bp) {
    display: none;
  }
}

.header-nav {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  overflow: auto;
  background: $bg;
  width: 90%;
  max-width: 300px;
  z-index: 10;
  transform: translateX(-100%);
  transition: 0.4s transform;

  @media(min-width: $bp) {
    position: static;
    display: inline-flex;
    align-items: center;
    gap: 50px;
    width: auto;
    max-width: none;
    height: auto;
    overflow: initial;
    background: transparent;
    transform: none;
  }

  .nav-active & {
    transform: none;
  }
}

.header-nav-item {
  padding: 20px;
  border-bottom: 1px solid $border;

  @media (min-width: $bp) {
    padding: 0;
    border: none;
    position: relative;
  }
}

.header-nav-a {
  display: block;
  color: $text;
  font-size: 20px;

  @media (min-width: $bp) {
    display: inline-block;
    padding: 20px 0;
    margin: -20px 0;
    font-size: 18px;
  }
}

.header-sub {
  padding: 0px 20px;
  margin-top: 15px;

  @media (min-width: $bp) {
    position: absolute;
    top: 100%;
    transform: translateX(-50%);
    background: $bg;
    border-radius: 5px;
    width: 220px;
    padding: 20px;
    opacity: 0;
    left: -9999px;
    transition: $fadeOff;
    box-shadow: 0px 0px 9px 0px rgba(0,0,0,0.2);
  }

  &:before {
    display: block;
    content: '';
    position: absolute;
    width: 14px;
    height: 14px;
    background: $bg;
    left: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
    top: 0;
    left: 50%;
    box-shadow: 0px 0px 9px 0px rgba(0,0,0,0.2);
    z-index: -1;
  }

  &:after{
    width: 45px;
    height: 16px;
    background: $bg;
    top: 0;
    left: 50%;
    margin-left: -22px;
    content: '';
    position: absolute;
  }

  .header-nav-a:hover + &, &:hover {
    @media (min-width: $bp) {
      opacity: 1;
      left: 50%;
      transition: $fadeOn;
    }
  }
}

.header-sub-item {
  display: block;

  & + & {
    margin-top: 5px;
  }
}

.header-sub-a {
  color: $mediumText;
  transition: 0.2s color;

  &:hover {
    color: $text;
  }
}

/*

Footer

*/

.footer {
  font-size: 14px;
  background-color: #f6f6f6;
  padding: 60px 0px;
}

.width{
  max-width: 1100px;
  margin: auto;
  width: 90%;
}

.footer-top {
  display: flex;
  flex-direction: column;
  gap: 40px;

  @media (min-width: $bp) {
      flex-direction: row;
      justify-content: space-between;
      gap: 30px;
  }
}

.footer-column {
  h2 {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 400;
    margin-bottom: 20px;
  }

  p {
    color: #666;
  }

  a {
    color: #666;
    transition: 0.2s color;
  }

  a:hover {
    color: #111;
  }

  li + li {
    margin-top: 10px;
  }
}

.footer-column.footer-column--news {
  form {
    margin-top: 20px;
  }

  input {
    display: block;
    width: 100%;
    border: 1px solid #ddd;
    padding: 0 16px;
  }

  button{
    color: #fff;
    margin-top: 10px;
    display: inline-block;
    background: #111;
    padding: 0 32px;
    border: 1px solid #111;
    transition: 0.2s color, 0.2s background-color, 0.2s border-color;
  }

  input,
  button {
    appearance: none;
    outline: none;
    line-height: 50px;
  }

  button:hover {
    background-color: #323232;
    border-color: #323232;
    cursor: pointer;
  }

  @media (min-width: $bp) {
    max-width: 320px;
  }
}

.footer-bottom {
  margin-top: 60px;
}

.footer-copyright {
  text-align: center;
  color: #666;
}

.footer-column-news-message{
  font-size: 12px;
  margin-bottom: 10px;
}


/*

FAQ

*/

.faq-page {
  padding: 60px 0;
}

.faq-page-width {
  max-width: 500px;
  margin: 0 auto;
  width: calc(100% - 40px);
}

.faq-page-header {
  padding-bottom: 30px;

  h1 {
    font-size: 44px;
    margin-bottom: 10px;
  }
}

.faq-page-header-content {
  font-size: 21px;
}

.faq-page-category {
  text-transform: uppercase;
  opacity: 0.4;
  font-size: 14px;
  margin-bottom: 10px;

  .faq-page-question + & {
    margin-top: 30px;
  }
}


.faq-page-question {
  border-bottom: 1px solid #ddd;
  display: block;
}

.faq-page-question-header {
  padding: 20px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;

    .h3 {
      font-size: 18px;
      flex: 1;
    }

    svg {
      width: 36px;
      transition: 0.2s transform;
    }
}

.faq-page-question-body {
  max-height: 0;
  overflow: hidden;
  transition: max-height 1s ease-in-out;
}

.faq-page-question.active {
  .faq-page-question-header svg {
    transform: rotate(180deg);
  }

  .faq-page-question-body{
    max-height: 300px;
  }
}

.faq-page-question-body-inner {
  padding-bottom: 20px;

  * + *{
    margin-top: 20px;
  }
}
